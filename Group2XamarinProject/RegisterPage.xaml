<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Group2XamarinProject.RegisterPage">


    <StackLayout Margin="40, 0, 40, 0" VerticalOptions="Center" Spacing="16">
        <Button Text="Back" BackgroundColor="Transparent" Clicked="BackClicked"/>

        <Frame BackgroundColor="#2196F3" Padding="24" Margin="0,0,0,30">
            <Label Text="REGISTER" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="usernameR" Placeholder="Username" />
        <Entry x:Name="passwordR" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="confirmPassword" Placeholder="Verify Password" IsPassword="True" Margin="0,0,0,30" />

        <Button Text="Register" BackgroundColor="#49b0ff"/>

    </StackLayout>

</ContentPage>